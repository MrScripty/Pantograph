{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "svelte"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "$lib/*": [
        "./src/lib/*"
      ],
      "$lib": [
        "./src/lib"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
