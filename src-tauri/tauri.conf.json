{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.pantograph.app",
  "productName": "Pantograph",
  "version": "0.0.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "bundle": {
    "externalBin": ["binaries/llama-server"]
  },
  "app": {
    "windows": [
      {
        "title": "Pantograph",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; font-src 'self'; script-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:* ws://localhost:* http://127.0.0.1:*;"
    }
  },
  "plugins": {}
}
